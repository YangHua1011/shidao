<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:/spring-service.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


    <filter>
        <filter-name>commonjs</filter-name>
        <filter-class>com.yizhuoyan.shidao.common.web.filter.LoadCommonJSFilter</filter-class>
        <init-param>
            <param-name>targetDictionary</param-name>
            <param-value>/WEB-INF/common/js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>commonjs</filter-name>
        <url-pattern>/common.js</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>commoncss</filter-name>
        <filter-class>com.yizhuoyan.shidao.common.web.filter.LoadCommonCSSFilter</filter-class>
        <init-param>
            <param-name>targetDictionary</param-name>
            <param-value>/WEB-INF/common/css</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>commoncss</filter-name>
        <url-pattern>/common.css</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>缓存控制</filter-name>
        <filter-class>com.yizhuoyan.shidao.common.web.filter.NoCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>缓存控制</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>前端控制器</servlet-name>
        <servlet-class>com.yizhuoyan.shidao.common.web.springmvc.PlatformDispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                classpath:/spring-webmvc.xml
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>前端控制器</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>2</session-timeout>
    </session-config>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error-page/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/error-page/500.html</location>
    </error-page>

</web-app>